<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E9E2"
    tools:context=".MainActivity">

    <!-- Food Image at the top -->
    <ImageView
        android:id="@+id/foodImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/food_image" /> <!-- Use your food image here -->

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodImage"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D4A03D"
        android:text="@string/login_button"
        android:textColor="#FFFFFF" />

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/register_button"
        android:textColor="#000000" />

    <!-- Login Options with Google and Apple -->
    <TextView
        android:id="@+id/loginOptionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="or log in with"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Google and Apple Icons -->
    <LinearLayout
        android:id="@+id/socialIconsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginOptionsText"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/googleIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google_icon" /> <!-- Use your Google icon here -->

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/appleIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/apple_icon" /> <!-- Use your Apple icon here -->
    </LinearLayout>

</RelativeLayout>
