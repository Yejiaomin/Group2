<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodMateFrontend"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="34" />

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>

        <!-- Required for querying the IME service at runtime -->
        <intent>
            <action android:name="android.view.InputMethod" />
        </intent>
        <!-- Required for querying the plugin at runtime -->
        <provider
            android:name="com.android.car.ui.plugin.PluginNameProvider"
            android:authorities="com.android.car.ui.plugin" />
    </queries>

    <permission
        android:name="com.example.foodMateFrontend.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.foodMateFrontend.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.FoodMateFrontend"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.example.foodMateFrontend.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.foodMateFrontend.LoginActivity" />
        <activity android:name="com.example.foodMateFrontend.RegisterActivity" />
        <activity android:name="com.example.foodMateFrontend.RestaurantActivity" />
        <activity android:name="com.example.foodMateFrontend.combo_activities.ComboDetailActivity" />
        <activity
            android:name="com.example.foodMateFrontend.menu_activities.MenuListActivity"
            android:launchMode="singleTop" /> <!-- 确保使用单实例 -->
        <activity
            android:name="com.example.foodMateFrontend.combo_activities.ComboListActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.example.foodMateFrontend.favorite_activities.FavoriteActivity"
            android:launchMode="singleTop" />

        <provider
            android:name="com.android.car.ui.core.CarUiInstaller"
            android:authorities="com.example.foodMateFrontend.CarUiInstaller"
            android:directBootAware="true"
            android:exported="false"
            android:process="@string/car_ui_installer_process_name" />
        <provider
            android:name="com.android.car.ui.core.SearchResultsProvider"
            android:authorities="com.example.foodMateFrontend.SearchResultsProvider"
            android:exported="true"
            android:process="@string/car_ui_installer_process_name"
            android:readPermission="com.android.car.ui.READ_SEARCH_RESULTS" />
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.foodMateFrontend.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>